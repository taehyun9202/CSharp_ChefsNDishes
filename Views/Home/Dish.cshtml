@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>
<div class="jumbotron">
    <p style="display: inline-block"><a href="/">Chefs</a></p>
    <p style="display: inline-block">|</p>
    <p style="display: inline-block">Dishes</p>
    <br>
    <a href="/adddish" class="btn btn-primary">Add Dish!</a>
</div>

<h1>Here are All the Dishes</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Chef</th>
            <th>Tastiness</th>
            <th>Amount of Calories</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@ViewBag.AllChefs[@item.ChefId-1].FirstName @ViewBag.AllChefs[@item.ChefId-1].LastName</td>
            <td>@item.Tastiness</td>
            <td>@item.Calories</td>
            <td><a href="/delete/@item.DishId">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

